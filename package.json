{
  "name": "mono-app",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "fmt": "turbo fmt",
    "api": "openapi-typescript ./openapi.json --output ./web/src/services/api.d.ts && npx @redocly/cli build-docs ./openapi.json -o ./openapi.html && open ./openapi.html"
  },
  "devDependencies": {
    "turbo": "latest",
    "@biomejs/biome": "1.6.0",
    "openapi-typescript": "6.7.5"
  }
}
