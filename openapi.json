{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "NextApp API",
    "description": "This is a NextApp API definition"
  },
  "servers": [{ "url": "https://api.example.com/api/v1" }],
  "paths": {
    "/users": {
      "get": {
        "tags": ["User"],
        "summary": "User一覧取得",
        "description": "登録されているUserをページネーション取得します。",
        "parameters": [{ "$ref": "#/components/parameters/CurrentPage" }, { "$ref": "#/components/parameters/EmailKeyword" }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/GetUsersResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundErrorResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "tags": ["User"],
        "summary": "User取得",
        "description": "登録されているユーザーを一覧で取得します。",
        "parameters": [{ "$ref": "#/components/parameters/UserId" }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/GetUserResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundErrorResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/users/{userId}/update": {
      "post": {
        "tags": ["User"],
        "summary": "User更新",
        "description": "ユーザー情報を更新します。",
        "parameters": [{ "$ref": "#/components/parameters/UserId" }],
        "requestBody": {
          "$ref": "#/components/requestBodies/UpdateUserRequestBody"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/UpdateUserResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundErrorResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Paging": {
        "type": "object",
        "required": ["totalPages", "currentPage", "paginate", "total"],
        "properties": {
          "totalPages": { "type": "integer", "title": "総ページ数" },
          "currentPage": { "type": "integer", "title": "取得したページ" },
          "paginate": { "type": "integer", "title": "ページ毎の表示件数" },
          "total": { "type": "integer", "title": "アイテムの総数" }
        }
      },
      "User": {
        "type": "object",
        "required": ["id", "name", "email", "imageUrl"],
        "properties": {
          "id": { "type": "string", "title": "ID" },
          "name": { "type": "string", "title": "ユーザー名" },
          "email": { "type": "string", "title": "メールアドレス" },
          "imageUrl": { "type": "string", "title": "ユーザー画像URL" }
        }
      },
      "Users": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/User" }
      }
    },
    "parameters": {
      "CurrentPage": {
        "name": "currentPage",
        "in": "query",
        "required": true,
        "description": "現在のページ番号（1〜）",
        "schema": {
          "type": "integer",
          "format": "int32"
        }
      },
      "Paginate": {
        "name": "paginate",
        "in": "query",
        "required": true,
        "description": "ページ毎の表示件数",
        "schema": {
          "type": "integer",
          "format": "int32"
        }
      },
      "EmailKeyword": {
        "name": "email",
        "in": "query",
        "required": true,
        "description": "メールアドレス検索値",
        "schema": { "type": "string" }
      },
      "UserId": {
        "in": "path",
        "name": "userId",
        "description": "取得したいユーザーIDを指定します。",
        "required": true,
        "schema": { "type": "string" }
      }
    },
    "requestBodies": {
      "UpdateUserRequestBody": {
        "required": true,
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["name", "email"],
              "properties": {
                "name": { "type": "string", "title": "ユーザー名" },
                "email": { "type": "string", "title": "メールアドレス" }
              }
            }
          }
        }
      }
    },
    "responses": {
      "GetUserResponse": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/User"
            },
            "examples": {
              "dummy": {
                "value": { "id": 1, "name": "テスト太郎", "email": "test.taro@example.com" }
              }
            }
          }
        }
      },
      "UpdateUserResponse": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/User"
            },
            "examples": {
              "dummy": {
                "value": { "id": "A0001", "name": "テスト太郎", "email": "test.taro@example.com" }
              }
            }
          }
        }
      },
      "GetUsersResponse": {
