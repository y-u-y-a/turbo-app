{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["./*", "**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "fmt": {
      "dependsOn": ["^fmt"]
    }
  }
}
